{
  "name": "issue-checker",
  "version": "0.0.1",
  "private": false,
  "description": "A GitHub Action that labels and comments on issues that are missing required information",
  "main": "lib/main.js",
  "scripts": {
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "build": "tsc && ncc build -m",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stevenzeck/issue-checker.git"
  },
  "keywords": [
    "actions",
    "node",
    "issues"
  ],
  "author": "Steven Zeck <steven.zeck@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "@types/node": "^20.4.5",
    "@typescript-eslint/parser": "^5.59.9",
    "@vercel/ncc": "^0.36.1",
    "eslint": "^8.42.0",
    "eslint-plugin-github": "^4.8.0",
    "eslint-plugin-jest": "^27.2.1",
    "jest": "^29.5.0",
    "js-yaml": "^4.1.0",
    "prettier": "2.8.8",
    "ts-jest": "^29.1.0",
    "typescript": "^5.1.3"
  }
}
